   <phrase role="identifier">assert</phrase> <phrase role="special">(</phrase><phrase role="identifier">client</phrase><phrase role="special">.</phrase><phrase role="identifier">send</phrase> <phrase role="special">(</phrase><phrase role="string">"lock bar"</phrase><phrase role="special">).</phrase><phrase role="identifier">get</phrase> <phrase role="special">()</phrase> <phrase role="special">==</phrase> <phrase role="string">"success"</phrase><phrase role="special">);</phrase>
   <phrase role="identifier">assert</phrase> <phrase role="special">(</phrase><phrase role="identifier">client</phrase><phrase role="special">.</phrase><phrase role="identifier">send</phrase> <phrase role="special">(</phrase><phrase role="string">"lock bar"</phrase><phrase role="special">).</phrase><phrase role="identifier">get</phrase> <phrase role="special">()</phrase> <phrase role="special">==</phrase> <phrase role="string">"fail"</phrase><phrase role="special">);</phrase>

   <phrase role="identifier">assert</phrase> <phrase role="special">(</phrase><phrase role="identifier">client</phrase><phrase role="special">.</phrase><phrase role="identifier">send</phrase> <phrase role="special">(</phrase><phrase role="string">"unlock foo"</phrase><phrase role="special">).</phrase><phrase role="identifier">get</phrase> <phrase role="special">()</phrase> <phrase role="special">==</phrase> <phrase role="string">"success"</phrase><phrase role="special">);</phrase>
   <phrase role="identifier">assert</phrase> <phrase role="special">(</phrase><phrase role="identifier">client</phrase><phrase role="special">.</phrase><phrase role="identifier">send</phrase> <phrase role="special">(</phrase><phrase role="string">"unlock bar"</phrase><phrase role="special">).</phrase><phrase role="identifier">get</phrase> <phrase role="special">()</phrase> <phrase role="special">==</phrase> <phrase role="string">"success"</phrase><phrase role="special">);</phrase>

   <phrase role="identifier">assert</phrase> <phrase role="special">(</phrase><phrase role="identifier">client</phrase><phrase role="special">.</phrase><phrase role="identifier">send</phrase> <phrase role="special">(</phrase><phrase role="string">"unlock foo"</phrase><phrase role="special">).</phrase><phrase role="identifier">get</phrase> <phrase role="special">()</phrase> <phrase role="special">==</phrase> <phrase role="string">"fail"</phrase><phrase role="special">);</phrase>
   <phrase role="identifier">assert</phrase> <phrase role="special">(</phrase><phrase role="identifier">client</phrase><phrase role="special">.</phrase><phrase role="identifier">send</phrase> <phrase role="special">(</phrase><phrase role="string">"unlock bar"</phrase><phrase role="special">).</phrase><phrase role="identifier">get</phrase> <phrase role="special">()</phrase> <phrase role="special">==</phrase> <phrase role="string">"fail"</phrase><phrase role="special">);</phrase>
<phrase role="special">}</phrase>
</programlisting>
